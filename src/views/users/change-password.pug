extends ../base

block content 
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(placeholder="Current Password" name="currentPassword" type="password")
    input(placeholder="New Password" name="newPassword" type="password")
    input(placeholder="Confirm New Password" name="newPasswordConfirmation" type="password")
    input(type="submit" value="Change Password")
