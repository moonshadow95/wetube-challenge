extends base

block content
  if errorMessage
      span=errorMessage
  form(method="POST")
    label(for="video") Video File 
    //- input(name="video" type="file" id="video" accept="video/*" required)
    input(name="title" type="text" id="video" placeholder="Title" required maxlength=40)
    input(name="description" type="text" placeholder="Description" required maxlength=300)
    input(name="hashtags" type="text" placeholder="Hashtags, separated by comma." required)
    input(type="submit" value="Upload Video")