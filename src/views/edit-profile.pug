extends base

block content 
  if errorMessage
    span=errorMessage
  form(method="POST", enctype="multipart/form-data").edit-profile__form
    if !loggedInUser.avatarUrl
      i.fas.fa-user-circle.fa-8x
    else
      img.avatar(src=loggedInUser.avatarUrl alt="Avatar image" crossorigin)
    label(for ='avatar') Avatar
    input(type='file' id='avatar' name='avatar' accept="image/*")
    input(name="email" type="email" placeholder="E-mail" value=loggedInUser.email)
    input(name="username" type="text" placeholder="User Name" value=loggedInUser.username)
    input(name="name" type="text" placeholder="Name" value=loggedInUser.name)
    input(name="location" type="text" placeholder="Location" value=loggedInUser.location)
    input(type="submit" value="Update Profile").form_btn
    if !loggedInUser.socialOnly
      div.edit-profile__password
      a(href="change-password") Change Password &rarr; 